{
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "skipLibCheck": true, // keep true unless you want lib noise
    "allowJs": false, // set true only if you need JS files checked
    "types": ["vite/client"] // for Vite projects
  },
  "include": ["src", "src/types"]
}
